
<div id="log-bar" class="login_bar">
    @if (!User.Identity.IsAuthenticated)
    {
        @("[")<a asp-route="Login">Login</a>@("]")
    }
    else
    {
        <span>[Logged in as @User.Identity.Name]</span>
        @("[")<a asp-route="Logout">Logout</a>@("]")
        <div>
            @if (User.IsInRole(nameof(Role.SuperAdmin)))
            {
                @("[")<a asp-route="BoardAdding">Add board</a>@("]")
                @("[")<a asp-route="BoardDeleting">Delete board</a>@("]")

                @("[")<a asp-route="AdminAdding">Add admin</a>@("]")
                @("[")<a asp-route="AdminDeleting">Delete admin</a>@("]")
            }
        </div>
    }
</div>