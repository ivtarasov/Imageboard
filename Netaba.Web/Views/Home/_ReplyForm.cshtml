@model ReplyFormViewModel

<div id="post-area" class="post_area">
    <form id="reply-form" class="reply_form" method="post" enctype="multipart/form-data" asp-action="CreatePost">

        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <span asp-validation-for="Post.Message"></span><br>
        <span asp-validation-for="Post.Title"></span>

        <div id="action" class="action">
            <label>@Model.ActionNameInView</label>
        </div>
        <div class="form_part form_part_flex">
            <input id="title" type="text" class="reply_input" size="10" asp-for="Post.Title" placeholder="Subject">
            <input type="hidden" name="targetId" value="@Model.TargetId">
            <input type="hidden" asp-for="Post.IsOp" value="@(Model.Action == ReplyFormAction.ReplyToTread ? "false" : "true")">
            <input id="submit" type="submit" class="reply_button" name="submit" value="Submit">
        </div>
        <div class="form_part">
            <textarea id="message" class="reply_input" asp-for="Post.Message" rows="10" placeholder="Message" spellcheck="false"></textarea>
        </div>
        <div class="form_part">
            <input id="password" type="password" class="reply_input" name="password" placeholder="Password">
        </div>
        <div class="form_part">
            <div class="reply_options">
                <label>Go to</label>
                <select name="dest" asp-items="Html.GetEnumSelectList<Destination>()"></select>
                <input type="checkbox" id="sage-check-box" name="isSage" value="true">
                <label>Sage</label>
                <input id="file" class="reply_file" type="file" name="file">
            </div>
        </div>
    </form>
</div>