@model DeleteAdminViewModel

@{
    ViewData["Title"] = "Delete admin";
}

<div class="centred">
    <div id="delete-admin-area">
        <label id="action" class="action">Delete admin</label>
        <form id="delete-form" class="form" asp-route="AdminDeleting">
            <div class="validation" asp-validation-summary="All"></div>
            <div class="form_part form_part_flex">
                <input id="name" class="input" size="10" placeholder="Name" asp-for="AdminName">
                <input id="submit" type="submit" class="button" name="Submit" value="Submit">
            </div>
        </form>
    </div>
</div>
